/* packages/health-code/pages/new-workbench/new-workbench.wxss */

page {
  background: #f2f2f2;
}

.headTitle {
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  color: #000;
  font-size: 40rpx;
  background: #fff;
}

.headTitle2 {
  padding: 16rpx 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: row;
  color: #666;
  font-size: 30rpx;
  background: #fff;
  align-items: center;
}

.change {
  width: 150rpx;
  color: #4293f4;
  border-radius: 75rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #4293f4;
  text-align: center;
  line-height: 50rpx;
}

.row {
  display: flex;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: column;
}

.alignCenter {
  align-items: center;
}

.justifyCenter {
  justify-content: center;
}

.flex1 {
  flex: 1;
}

.txdj {
  background-color: #fff;
  margin: 0 24rpx;
  border-radius: 10rpx;
  padding: 24rpx;
  align-items: center;
}
 
.box{
  margin-top: 32rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

}

.item {
  margin: 8rpx;
  width: calc(calc(100% / 2.2));
  height: 240rpx;
  display: flex;
  background: #fff;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-style: solid;
  border-width: 1rpx;
  border-color: #d7d7d7;
}
