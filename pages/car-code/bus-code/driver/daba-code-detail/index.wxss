/* pages/car-code/bus-code/driver/daba-code-detail/index.wxss */
.container {
  width: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
}

.header{
  position: relative;
  height: 340px;
  background: #fff;
  box-sizing: border-box;
}

.header-field {
  padding: 50rpx 95rpx;
}

.cro-left-bottom,
.cro-right-bottom,
.cro-left-top,
.cro-right-top {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  z-index: 1;
  background: #f5f5f5;
}

.cro-line-bottom {
  position: absolute;
  bottom: 1px;
  left: 100rpx;
  width: 480rpx;
  border-bottom: 2px dashed #f5f5f5;
}

.cro-left-bottom {
  bottom: 0;
  left: 0;
  border-radius:0 20rpx 0 0;
}

.cro-right-bottom {
  bottom: 0;
  right: 0;
  border-radius: 20rpx 0 0 0;
}

.cro-left-top {
  top: 0;
  left: 0;
  border-radius:0 0 20rpx 0;
}

.cro-right-top {
  top: 0;
  right: 0;
  border-radius: 0 0 0 20rpx;
}

.header-field__code {
  width: 480rpx;
  height: 480rpx;
  margin: 0 auto;
}
.header-field__icon{
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: 284rpx;
  top: 232rpx;
}
.header-field__empty{
  width: 480rpx;
  height: 480rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  border: solid 1px #EBEBEB;
}

.content {
  position: relative;
  background: #fff;
  padding-top: 36rpx;
}

.line {
  height: 15rpx;
  width: 100%;
  background-color: rgb(230, 230, 230);
}

.edit-text{
  position: absolute;
  float: right;
  right: 30rpx;
  top: 36rpx;
  width: 142rpx;
  height: 63rpx;
  background: #FAFAFA;
  border: 2rpx solid rgba(0,0,0,0.10);
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 63rpx;
}

.btn-wrapper{
    width: 100%;
    text-align: center;
}

.start-btn{
  width: 360rpx;
  height: 100rpx;
  background: #FFFFFF;
  border: 1px solid #4293F4;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  font-weight: 400;
  color: #4293F4;
  letter-spacing: 0;
  text-align: center;
  line-height: 100rpx;
}

.btn-group{
  position: fixed;
  bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.btn-item{
  width: 50%;
  margin: 0 10rpx;
}

.sk-dropdown-list__ul {
  padding: 8rpx 0 8rpx 30rpx;
}
.sk-dropdown-list__item {
  display: flex;
  align-items: center;
}
.sk-dropdown-list__delete {
  width: 36rpx;
  height: 36rpx;
  padding: 30rpx 18rpx;
}
.sk-dropdown-list__box {
  flex: 1;
  display: flex;
  height: 100rpx;
  padding: 30rpx 45rpx;
  border: 1px solid #EBEBEB;
  margin: 10rpx 0;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.sk-dropdown-list__item .s-name {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 40rpx;
  width: 210rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.sk-dropdown-list__item .s-phone {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: right;
  line-height: 40rpx;
}

