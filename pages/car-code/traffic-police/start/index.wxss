page {
  background: #f5f5f5;
  padding-bottom: 30rpx;
  height: 100%;
}

.inline{
  display: inline-block;
}

.is-hidden{
  display: none;
}

.traffic-gate{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.access-box {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 24rpx 32rpx;
  padding: 50rpx 48rpx;
}

.access-box--hover {
  background: #DEEDFF;
  box-shadow: 0 12rpx 18rpx 0 rgba(66,147,244,0.30);
}

.access-box .img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 32rpx;
}

.access-box .img image {
  width: 100rpx;
  height: 100rpx;
}

.access-box .right-content {
  flex: 1;
  text-align: left;
  padding: 0;
}

.access-box .right-content .title {
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
  letter-spacing: 0;
  line-height: 48rpx;
}

.access-box .right-content .desc {
  margin-top: 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  letter-spacing: 0;
}


.index__info {
  margin: 16rpx 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}

.link {
  display: inline;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4293F4;
  letter-spacing: 0;
}

.qr-code{
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  font-family: "PingFangSC-Regular";
  font-size: 36rpx;
  line-height: 1.5;
  background-color: rgba(0, 0, 0, .2);
  text-align: center;
}

.qr-code .code-main{
  width: 608rpx;
  height: 740rpx;
  border-radius: 30rpx;
  margin: auto;
  padding: 80rpx 0;
  margin-top: 160rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.qr-code .code-image{
  display: inline-block;
  width: 418rpx;
  height: 418rpx;
  margin-top: 60rpx;
}

.back-image__wrapper {
  position: relative;
  width: 100%;
  height: 280rpx;
}

.back-image {
  width: 100%;
  height: 280rpx;
}

.code-main__text {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 48rpx;
}