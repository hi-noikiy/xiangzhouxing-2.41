/* pages/report/index.wxss */
.hidden{
  height: 0;
  overflow: hidden;
}
.info__title{
  padding: 38rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.title__cont{
  font-size: 48rpx;
  line-height: 68rpx;
  font-weight: bold;
  flex: 1;
  word-break: break-all;

}

.self-image {
  margin: 20rpx 40rpx;
}
.label-container {
  margin-left: 30rpx;
}

.agree{
  margin-left: 40rpx;
  margin-right: 40rpx;
  color:#4293F4;
}

.checkbox__item {
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.checkbox {
  position: absolute;
  /* left: -9999rpx; */
}
  
.checkbox__label {
  margin-right: 20rpx;
  margin-left: 60rpx;
}

.checkbox__label__text {
  line-height: 48rpx;  
}
  
.checkbox__label__desc {
  line-height: 40rpx;
  color: #909399;
  margin-top: 6rpx;
}

.temperature-form{
  display: flex;
  align-items: flex-end;
  margin: 0 60rpx 0 40rpx;
  font-size: 36rpx;
}

.select-btn-temperature {
  display: flex;
  padding-left: 60rpx;
  padding-bottom: 36rpx;
  margin: 0 30rpx;
  align-items: center;
  font-size: 80rpx;
  color: #000;
  margin-top: 0rpx;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
  position: relative;
  top: -18rpx;
}

.select-btn-temperature>text {
  font-size: 40rpx;
  margin-left: 10rpx;
}

.select-btn-temperature>input {
  height: 68rpx;
}

.temperature {
  width: 64rpx;
  margin-left: 10rpx;
  border-bottom: 2rpx solid #E0E0E0;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 48rpx;
}
.temperature-degree {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  padding-top: 30rpx;
}
  
  
  