.table {
  display: table;
  table-layout: fixed;
  width: 100%;
}

.colgroup {
  display: table-column-group;
}

.col {
  display: table-column;
}

.thead {
  display: table-header-group;
}

.tbody {
  display: table-row-group;
}

.tr {
  display: table-row;
}

.th {
  display: table-cell;
  text-align: center;
  word-break: break-all;
}

.td {
  display: table-cell;
  text-align: center;
  word-break: break-all;
}

.border--top {
  position: relative;
}

.border--top::after {
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  left: 0;
  right: 0;
  content: '';
  position: absolute;
  background-color: #ebebeb;
  top: 0;
}

.border--bottom {
  position: relative;
}

.border--bottom::after {
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  left: 0;
  right: 0;
  content: '';
  position: absolute;
  background-color: #ebebeb;
  bottom: 0;
}

.border--left {
  position: relative;
}

.border--left::after {
  width: 100%;
  width: 1px;
  transform: scaleX(0.5);
  top: 0;
  bottom: 0;
  content: '';
  position: absolute;
  background-color: #ebebeb;
  left: 0;
}

.border--left {
  position: relative;
}

.border--left::after {
  width: 100%;
  width: 1px;
  transform: scaleX(0.5);
  top: 0;
  bottom: 0;
  content: '';
  position: absolute;
  background-color: #ebebeb;
  right: 0;
}

.picker {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.picker__value {
  font-size: 36rpx;
  line-height: 48rpx;
  flex: 1;
  word-break: break-all;
}

.picker__value--placeholder {
  color: #bbbec4;
}

.picker__value--disabled {
  color: #1c2438;
}

.picker__action {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #4293f4;
  text-align: right;
  align-self: flex-start;
  margin-left: 20rpx;
}

.dropdown {
  max-width: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-descBox {
  margin-top: 6rpx;
  font-size: 30rpx;
  color: #ccc;
  word-break: break-all;
}
